extends layout

block append css
  link(href='/static/css/highscores.less', rel='stylesheet/less', type='text/css')

block content
  .container
    .content
      if highscores.config
        h1 #{req.params.project} LEGENDS
        if highscores.error
          p.alert
            |The highscores API returned the following error:
            |<br />
            !=trace(highscores.error)
        else
          table
            each row in highscores.data
              tr
                td.place=row.place
                td.name=row.username
                td.score=row.score
