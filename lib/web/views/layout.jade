!!! 5
html(lang='en')
  head
    title Gutsy, the Dashboard

    block meta
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      meta(name='description', content='')
      meta(name='author', content='')

    block css
      link(href='/static/bootstrap/css/bootstrap.css', rel='stylesheet')
      link(href='/static/bootstrap/css/bootstrap-responsive.css', rel='stylesheet')
      link(href='/static/css/all.less', rel='stylesheet/less', type='text/css')

    block scripts
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
      script(src='/static/jquery/jquery-1.7.1.min.js')
      script(src='/static/jquery/jquery.tablesorter.min.js')
      script(src='/static/bootstrap/js/bootstrap.min.js')
      script(src='/static/bootstrap/js/bootstrap-dropdown.js')
      script(src='/static/less/less-1.2.2.js')

      | <script>
      |   $(document).ready(function(){
      |   $(function() {
      |     $('.dropdown-toggle').dropdown();
      |   });
      |   $(".timeline-tooltip").click(function() {
      |     $(this).children().toggle();
      |   });
      | });
      | </script>

    link(rel='shortcut icon', href='images/favicon.ico')
    link(rel='apple-touch-icon', href='images/apple-touch-icon.png')
    link(rel='apple-touch-icon', sizes='72x72', href='images/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='114x114', href='images/apple-touch-icon-114x114.png')
  body
    .notbootstrap-navbar
      .notbootstrap-navbar-inner
        .notbootstrap-container-fluid
          if '/' == url
            a.active.brand(href='/') Dashboards
          else
            a.brand(href='/') Dashboards
          ul.internal
            each _url, text in navbar
              if _url == url
                li.active
                  a(href='#{_url}') #{text}
              else
                li
                  a(href='#{_url}') #{text}
          ul.external
            if "/about" == url
              li.active
                a(href='/about') About
            else
              li
                a(href='/about') About

    block content
